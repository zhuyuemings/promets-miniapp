<!--pages/smile/smile.wxml-->
<view class="userinfo">
  <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
  <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  <text class="hitokoto">{{hitokoto}}</text>
</view>

<view class="btn_group">
  <button class="btn" bindtap="copyHitokoto">
    <image class="btn_icon" src="../../assets/btn_icon/copy.png"></image>
  </button>

  <button class="btn" bindtap="getHitokoto">
    <image class="btn_icon" src="../../assets/btn_icon/reload.png"></image>
  </button>
</view>