.love {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cover {
  margin-top: 25%;
  width: 80%;
  border: solid 20rpx white;
  border-radius: 25rpx;
}

.content {
  opacity: 0.6;
  position: fixed;
  width: 80%;
  height: 80rpx;
  background: white;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffadd2;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 3%;
  border: solid 5rpx white;
  border-radius: 25rpx;
  padding: 15rpx;
}

